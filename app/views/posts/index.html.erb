<h1>게시판</h1>
<a href="/posts/new">새글쓰기</a>
<table>
    <tr>
        <th>제목</th>
        <th>내용</th>
        <th>작성자</th>
        
    </tr>

    <% @posts.reverse.each do |p|%>
    <tr>
        <td><%= p.title%></td>
        <td><%= p.content%>
            <a href="/posts/show/<%= p.id%>">보기</a>
            <a href="/posts/edit/<%= p.id%>">수정</a>
            <a href="/posts/<%= p.id%>" data-method="delete">삭제</a>
        </td>
        <td><%= p.user.name%></td>
    </tr>
    <% end %>
</table>